<UserControl x:Class="Task3.TaskBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task3"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <Button x:Name="btnTimer" Content="Start" Margin="182,40,10,10" Tag="Start/Pause_Button"/>
        <TextBox x:Name="textBoxTask" Height="24" Margin="10,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" Margin="10,40,90,10" TextWrapping="Wrap" Text="Logged: "/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="62" Margin="6,4,0,0" VerticalAlignment="Top" Width="289"/>
    </Grid>
</UserControl>
