<UserControl x:Class="Task3.TaskBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task3"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <TextBox x:Name="textBoxTask" Height="24" Margin="5,10,5,10" TextWrapping="Wrap" Text="{Binding Path=TaskNameText}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" Margin="10,40,123,10" TextWrapping="Wrap" Text="{Binding Path=TaskTimerText}" FontSize="13.333"/>
        <Button x:Name="btnTimer" Content="Start" Margin="0,40,5,10" Tag="Start/Pause_Button" Click="btnStartPause_Click" HorizontalAlignment="Right" Width="108"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,5,0,5"/>
    </Grid>
</UserControl>
