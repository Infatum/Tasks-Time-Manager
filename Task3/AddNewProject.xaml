<Window x:Class="Task3.AddNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="AddNewProject" Height="228.667" Width="255.334">
    <Grid Margin="0,0,0,5">
        <Label x:Name="labelProjectName" Content="Project Name: " VerticalAlignment="Top" Margin="10,5,12,0" Height="25"/>
        <Label x:Name="labelProjectDescription" Content="Project Description: " VerticalAlignment="Top" Margin="10,58,12,0" Height="25"/>
        <RichTextBox x:Name="richTextBox" Margin="10,83,10,34">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="textBox" Height="23" Text="{Binding Path=ProjectNameText, Mode=TwoWay}" Margin="10,30,12,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnOk" Content="Add Project" Margin="124,0,10,6" Height="22" VerticalAlignment="Bottom" Click="btnOk_Click"/>
        <Button x:Name="btnExit" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,6" Width="107" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
