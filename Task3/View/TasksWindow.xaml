<Window x:Class="TasksTracker.ProjectTaskWindow"
        x:Name="MainWindowTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksTracker"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="280" MinWidth="320" Height="340" Width="350">
    <Grid x:Name="MainGrid" ShowGridLines="True" Margin="0,0,0,1">
        <Button x:Name="btnAddTimer" Content="Add Timer" FontSize="12" Background="LightGray" Foreground="Black" Margin="0,10,10,0" HorizontalAlignment="Right" Width="132" Height="21" VerticalAlignment="Top"/>
        <ScrollViewer Margin="10,58,10,10" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="tasksStackPanel" ScrollViewer.HorizontalScrollBarVisibility="Visible" Height="230">
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="btnRemoveSelectedTask" Content="Remove Selected Task" FontSize="12" Background="LightGray" Foreground="Black" Margin="0,10,200,0" HorizontalAlignment="Right" Width="132" Height="21" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxFreelancerMode" Content="Freellancer Mode" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>